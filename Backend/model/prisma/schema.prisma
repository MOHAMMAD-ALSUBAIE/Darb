generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}



model User{
  id String @id @default(uuid())
  email String @unique
  name String
  role Role @default(USER)
  Password String
  birthDate String
  Favoritest Favoritest[]
  Itinerary Itineraries[]
}


model Favoritest{
  id String @id @default(uuid())
  Itineraries Itineraries @relation(fields: [ItineraryID],references: [id])
  User User @relation(fields: [userID],references: [id], onDelete: Cascade, onUpdate: Cascade)
  userID String
  ItineraryID String

  @@unique([userID,ItineraryID])
  @@index([ItineraryID])
  @@index([userID])
}
model Itineraries{
  id String @id @default(uuid()) 
  User User? @relation(fields: [userID],references: [id])
  userID String? @default("emty")
  citydescription  String @db.Text
  Favoritest Favoritest[]
  Itinerary Itinerary[]
  @@index([userID])
}

model Itinerary{
    id String @id @default(uuid())
    ItineraryID Itineraries @relation(fields: [itineraryID],references: [id], onDelete: Cascade, onUpdate: Cascade)
    itineraryID String
    name String
    description  String @db.Text
    bannerImage String
    slugCategoryPOI String
    slugCity String
    location String
    day String

    @@index([itineraryID])
}

